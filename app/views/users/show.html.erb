<div>
  <h3><%= @user.name %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @movies.each do |movie| %>
<div>
  <%= link_to movie_path(movie.id) do %>
    <p>紹介詳細ページ</p>
  <% end %>
  <p>movie名：<%= movie.movie_name %></p>
  <p>説明：<%= movie.caption %></p>
  <p>ユーザーネーム：<%= movie.user.name %></p>
</div>
<% end %>
<%= paginate @movies %>